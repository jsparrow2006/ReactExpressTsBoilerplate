{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "controllers/*": ["./controllers/*"],
      "helpers/*": ["./helpers/*"],
      "libs/*": ["./libs/*"],
      "middlewares/*": ["./middlewares/*"],
      "models/*": ["./models/*"],
      "types/*": ["./types/*"],
      "routes/*": ["./routes/*"],
      "config/*": ["./config/*"]
    }
  },
  "lib": ["es6"]
}